<%= tag.div(flash[:alert], style: "color:red; text-align: center;") if flash[:alert] %>
<%= tag.div(flash[:notice], style: "color:green; text-align: center;") if flash[:notice] %>
<div class="login-container">
  <div class="login-form">
    <h1>Login</h1>
    <%= form_with url: session_path, class: "form" do |form| %>
      <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email address", value: params[:email_address], class: "signin-field" %>
      <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72, class: "signin-field" %> 
      <%= form.submit "Sign in", class: "signin-button" %>
    <% end %>
    <div class="under-signin">
      <%= link_to "Forgot password?", new_password_path, class: "under" %><br>
      <%= link_to "Registration", new_registration_path, class: "under" %>
    </div>
  </div>
</div>
